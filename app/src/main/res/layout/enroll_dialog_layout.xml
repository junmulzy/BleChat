<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/dp300"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_enroll_bg"
    >
    <TextView
        android:id="@+id/enroll_dialog_text_tel"
        android:text="请输入用户账号（6位）"
        android:textSize="@dimen/sp14"
        style="@style/Enroll_Dialog_Text"
        />

    <EditText
        android:id="@+id/enroll_dialog_edit_tel"
        style="@style/Enroll_Dialog_Edit"
        android:inputType="phone"
        android:maxLength="6"
        android:hint="请输入数字"
        />

    <TextView
        android:id="@+id/enroll_dialog_text_password"
        android:text="请输入账户密码："
        android:textSize="@dimen/sp14"
        style="@style/Enroll_Dialog_Text"
        />

    <EditText
        android:id="@+id/enroll_dialog_edit_password"
        style="@style/Enroll_Dialog_Edit"
        android:inputType="textPassword"
        android:maxLength="20"
        android:hint="请输入数字、字母、汉字"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp2"
        android:layout_marginRight="@dimen/dp2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:orientation="horizontal"
        android:padding="@dimen/dp5"
        android:gravity="center_vertical"
        >

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

        <Button
            android:id="@+id/enroll_dialog_btn_ok"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp48"
            android:layout_weight="1"
            android:text="登录"
            android:textColor="#656363"
            android:textSize="@dimen/sp14"
            android:background="@drawable/dialog_enroll_bg"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            />

        <Button
            android:id="@+id/enroll_dialog_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp48"
            android:layout_weight="1"
            android:text="注册"
            android:textColor="#656363"
            android:textSize="@dimen/sp14"
            android:background="@drawable/dialog_enroll_bg"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            />
    </LinearLayout>
</LinearLayout>